    private void TabelaMouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_TabelaMouseClicked
        if(Tabela.getSelectedRow() != -1){
            
           nomeLtxt.setText(Tabela.getValueAt(Tabela.getSelectedRow(), 0).toString());
           controltxt.setText(Tabela.getValueAt(Tabela.getSelectedRow(), 1).toString());
           dataNtxt.setText(Tabela.getValueAt(Tabela.getSelectedRow(), 2).toString());
           dataEtxt.setText(Tabela.getValueAt(Tabela.getSelectedRow(), 3).toString());
        }
        
        
        
        
    }//GEN-LAST:event_TabelaMouseClicked

    private void btnAtualizarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnAtualizarActionPerformed
        try {
            // TODO add your handling code here:
            mostrar_dados("dblivros.txt");
        } catch (IOException ex) {
            Logger.getLogger(cadastroRealizado.class.getName()).log(Level.SEVERE, null, ex);
        }
    }//GEN-LAST:event_btnAtualizarActionPerformed

