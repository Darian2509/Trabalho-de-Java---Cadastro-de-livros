     public void salvarDados() throws IOException{
        dataEmprestimo = dataNtxt.getText();
        editora = editortxt.getText();
        nomeLivro = nomeLtxt.getText();
        dataDevolucao = dataEtxt.getText();
        idAluno = idAlunoTxt.getText();
        
        String textoSalvar = idAluno + " ; " + nomeLivro + " ; " + 
                editora + " ; " + dataEmprestimo + " ; " + dataDevolucao;
        
        System.out.println(textoSalvar);
        salvar_para_arquivo(textoSalvar, "dblivros.txt");
     }    
        
    // nomeLivro ; editora ; dataEmprestimo ; dataDevolucao
    
    
    
    private void limpardados(String string) {
     dataNtxt.setText("");
     editortxt.setText("");
     nomeLtxt.setText("");
     dataEtxt.setText("");
    
     
    }
